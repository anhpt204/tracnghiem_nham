<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
{% extends "basic.html" %}

{% block content %}
	<style type="text/css">
    	.main { margin-left: 25px; margin-top: 30px; border-top: 1px solid #CCCCCC}
    	.search { margin-top: 50px;text-align: center }
    	.time { font-size: 0.8em; margin-top: 2px; }
    	.body { font-size: 1.1em; margin-top: 2px; }
    	.relations { text-align: right; font-size: 13px }
    	.step-links a { font-size: 0.89em; }
    	.sense {
        	font-size: 1.2em; margin-top: 20px; border-bottom: 1px solid #ccc;
        	padding-left: 4px; margin-left: 5px;
    	}
    	.messages { margin-left: 20px; }
    	.pagination { margin-top: 20px; margin-left: -20px; }
	</style>
	<h2>Quan há»‡: {{property}}</h2>
	<div class="sense">{{main_sense.0.word}} (<i>{{main_sense.0.synset.gloss}}</i>)</div>			

	{% if dis_type %}	
	    {% for relation in relations %}
			<div class="sense">			    
			{% for wordsense in relation %}
				<ul><li><a href="{% url vwn.views.search_result wordsense.word.pk %}">{{wordsense.word}} ({{wordsense.synset.gloss}})</a>		    
			{% endfor %}
			</div>	        
	    {% endfor %}
	{% else %}
		{% for relation in relations %}
			<ul> <li>
			<div class="sense">
			{% for wordsense in relation %}
				<a href="{% url vwn.views.search_result wordsense.word.pk %}">{{wordsense.word}}</a>		    
			{% endfor %}
			</div>
		{% endfor %}	
	{% endif %}
{% endblock %}

